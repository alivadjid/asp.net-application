@model CreditCalculator.Models.CreditModel

@{
    ViewBag.Title = "Рассчитаем кредит";
}


<div class="col-md-3">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(v => v.Amount)
            @Html.TextBoxFor(v => v.Amount, new { @class = "form-control", type = "number", placeholder ="руб.", required = "required" })

            <div class="error">@Html.ValidationMessageFor(v => v.Amount)</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(v => v.Time)
            @Html.TextBoxFor(v => v.Time, new { @class="form-control", type="number", placeholder="мес.", required = "required" })

            <div class="error">@Html.ValidationMessageFor(v => v.Time)</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(v => v.Term)
            @Html.TextBoxFor(v => v.Term, new { @class="form-control", type="number", placeholder="%", required = "required" })
                       
            <div class="error">@Html.ValidationMessageFor(v => v.Term)</div>
        </div>

        <div class="btn_wrap">
            <button type="submit" class="btn btn-primary btn-large btn-submit">Рассчет</button>
            
        </div>
    }
</div>
